#!/bin/bash
set -e

usage() {
cat << EOF
Usage: $0 [OPTIONS]
Build a new Python R image.
Options:
    -c, --use-cache Use layer cache when building a new image.
EOF
}

CACHE_FLAG='--no-cache'

while :; do
    case "$1" in 
        -h|--help)
            usage
            exit
            ;;
        -c|--use-cache)
            CACHE_FLAG=''
            ;;
        -?*)
            usage
            printf 'ERROR: Unknown option: %s\n' "$1" >&2
            exit
            ;;
        *)            
            break
    esac

    shift
done

readonly CACHE_FLAG

set -x
docker build --rm --pull $CACHE_FLAG -t kaggle/rstats-build .
